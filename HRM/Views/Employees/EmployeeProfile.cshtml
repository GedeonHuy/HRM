@model Employee

<h2>THÔNG TIN NHÂN VIÊN</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="row detailTable" style="margin-left: 25em;">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-2">
                            MSNV
                        </div>
                        <div class="col-md-10">
                            @Model.EmployeeCode
                        </div>
                    </div>   
                    
                </div>
                <hr style="width: 20em; margin-left: 0" />    
          
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-2">
                            Họ và Tên
                        </div>
                        <div class="col-md-10">
                            @Model.FullName
                        </div>
                    </div>
                </div>
                <hr style="width: 20em; margin-left: 0" />

                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-2">
                            Giới tính
                        </div>
                        <div class="col-md-10">
                            @Model.Gender
                        </div>
                    </div>
                </div>
                <hr style="width: 20em; margin-left: 0" />

                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-2">
                            Địa chỉ
                        </div>
                        <div class="col-md-10">
                            @Model.Address
                        </div>
                    </div>
                </div>
                <hr style="width: 20em; margin-left: 0" />

                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-2">
                            Nơi sinh
                        </div>
                        <div class="col-md-10">
                            @Model.PlaceOfBirth
                        </div>
                    </div>
                </div>
                <hr style="width: 20em; margin-left: 0" />

                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-2">
                            Ngày sinh
                        </div>
                        <div class="col-md-10">
                            @Model.DateOfBirth
                        </div>
                    </div>
                </div>               

            </div>
        </div>
    </div>
</div>